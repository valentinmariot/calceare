{% extends 'base.html.twig' %}
{% block title %}Your order{% endblock %}

{% block content %}
    <section>
        <h1>Product buy !!</h1>
        <h3>Thank you for buying a {{ user.username }}'s product :</h3>
        <div class="grid3">
            <figure style="aspect-ratio: 1" class="product-img border-radius shadow">
                <img src="../uploads/{{ product.image }}" alt="{{ product.title }}">
            </figure>
            <div>
                <h2>{{ product.title }}</h2>
                <div style="margin-bottom: 24px" class="product-tag">{{ product.brand }}</div>
                <p style="margin-bottom: 24px">{{ product.description }}</p>
                <div style="margin-bottom: 24px" class="product-size flexrow">
                    <h5 style="margin-right: 8px">Size:</h5>
                    <p>{{ product.size }}</p>
                </div>
                <div style="margin-bottom: 24px" class="product-condition flexrow">
                    <h5 style="margin-right: 8px">Condition:</h5>
                    <p>{{ product.state }}</p>
                </div>
                <h3 style="margin: 0" class="primary_color">${{ product.price }}</h3>
            </div>
            <div style="aspect-ratio: 1; padding: 20px; justify-content: space-between; display: flex; flex-direction: column;" class="border border-radius shadow">
                <h5>Now you can rate {{ user.username }} !!!</h5>
                <a href="{{ path('app_user', {id: user.id}) }}" class="CTA">
                    <span>Jump to the profil â†’</span>
                </a>
            </div>
        </div>
    </section>
{% endblock %}